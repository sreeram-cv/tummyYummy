<%= link_to(image_tag("user.png"), edit_agent_path(@agent),class:"profo") %>
<p id="notice"><%= notice %></p>

<p class="aname" >
  welcome "<%= @agent.name %>"
</p>



<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<div class = "agentsContainer">
  <div class= "agentsHeader">
  Your Orders
  </div>

  <% @agent.orders.each do |order| %>
    <div class = "agents">
    <div class= "agentName" data-id="<%= order.id %>" agent-id="<%= order.agent_id%>" user-id="<%= order.user_id %>">
      <%= findUser(order.user_id) %>
      <%= image_tag "delivered1.png", class:"deleteOrderItems",data: { toggle: "modal" , target:"#myModal1"}  %>
    </div>
    <div class= "itemsContainer hide ">
    <div class ="agentDetails">
      <span class="phone">
        Phone : <%= findUserPhone(order.user_id) %>
      </span>,
      <span class="address">
        Address : <%= findUserAddress(order.user_id) %>
      </span>
    </div>
      <% order.items.split(",").each do |item| %>
        <div class = "items col-md-6">
          <%=image_tag("food.png")%>
          <span> <%= item %> </span>
        </div>
      <%end %>
    </div>
  </div> 
  <%end %>
  <% if @agent.orders.length==0 %>
    <div class = "emptyagents">
        No orders for now
    </div>
  <%else%> 
  <%end %>
</div>
</div>



